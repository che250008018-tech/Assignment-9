#include <iostream>
using namespace std;

// Define the Color structure
struct Color {
    int red;
    int green;
    int blue;
};

int main() {
    // Declare and initialize an array of 5 Color structures with sample RGB values
    Color colors[5] = {
        {100, 150, 200},  // Color 1
        {50, 200, 100},   // Color 2
        {255, 0, 128},    // Color 3
        {0, 255, 0},      // Color 4
        {255, 255, 255}   // Color 5
    };
    for (int i=0;i<3;++i) {
        colors[i].red = 255- colors[i].red;
        colors[i].green=255 - colors[i].green;
        colors[i].blue=255 - colors[i].blue ;
    }
    cout << "All RBG values after inversion: "<< endl;
    for (int i=0;i< 5;++i) {
        cout << "Color "<< i+1 << "-"
          << "red : "<< colors[i].red<< ","
          <<"green : "<< colors[i].green << ","
          <<"blue : " << colors[i].blue << endl;
    }
    return 0;
}
